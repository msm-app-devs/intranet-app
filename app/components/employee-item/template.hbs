{{#paper-card class="employee-item" as |card|}}
  {{employee-avatar imgSource=employee.image avatarSource=employee.avatar imgName=(concat employee.firstName ' ' employee.lastName)}}
  {{#card.title class="employee-item__title-holder" as |title|}}
    {{#title.text as |text|}}
      {{#text.headline class="employee-item__title-text"}}{{employee.firstName}}{{/text.headline}}
      {{#text.headline class="employee-item__title-text"}}{{employee.lastName}}{{/text.headline}}
    {{/title.text}}
  {{/card.title}}
  {{#card.content}}
    <p class="employee-item__texts employee-item__position">{{employee.position}}</p>
    <p class="employee-item__texts">{{employee.team}}</p>
    <p class="employee-item__texts employee-item__thought">{{employee.thought}}</p>
  {{/card.content}}
  {{#card.actions class="layout-row"}}
    {{#paper-button class="employee-item__btn flex" onClick=(route-action "visitRoute" 'employees.employee' employee)}}<div>Read more</div>{{/paper-button}}
  {{/card.actions}}
{{/paper-card}}
