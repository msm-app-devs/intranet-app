{{#data-table data=data classNames=tableClassNames as |t|}}
  {{#t.column propertyName='Image' name='Image'}}
    {{!-- src="{{rootURL}}/assets/images/{{col.row.image}}.png" --}}
    <img src="https://cdn.pixabay.com/photo/2016/11/18/23/38/child-1837375__340.png" style="width:32px;height:32px;">
  {{/t.column}}
  {{t.column propertyName='firstName' name='First name'}}
  {{t.column propertyName='lastName' name='Last Name'}}
  {{t.column propertyName='position' name='Position'}}
  {{t.column propertyName='team' name='Team'}}
  {{#t.column as |col|}}
    {{#if col.body}}
      <button class="button btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off" onclick={{action 'toggleDetail' col.rowIndex}} >
        {{#if (eq col.rowIndex rowIndexToShowDetail)}}
          Hide
        {{else}}
          Edit
        {{/if}}
      </button>
    {{/if}}
  {{/t.column}}
  {{#t.extraRow as |er|}}
    {{#if (eq er.rowIndex rowIndexToShowDetail)}}
      <td colspan="5">
        ID: {{er.row.id}}<br>
        First name: {{input value=(readonly er.row.firstName) name='firstName' key-up=(action 'onnickupdate')}}<br>
        Last name: {{input value=(readonly er.row.lastName) name='lastName' key-up=(action 'onnickupdate')}}<br>
        Position: {{input value=(readonly er.row.position) name='position' key-up=(action 'onnickupdate')}}<br>
        Team: {{input value=(readonly er.row.team) name='team'key-up=(action 'onnickupdate')}}<br>
        Birthday: {{input value=(readonly er.row.birthday) name='birthday' key-up=(action 'onnickupdate')}}<br>
        <button class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off" onclick={{action 'saveChanges' er}} >
          Save
        </button>
        <button class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off" onclick={{action 'discardChanges' er}} >
          Discard
        </button>
        <button class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off" onclick={{action 'deleteChanges' er}} >
          Delete
        </button>
      </td>
    {{/if}}
  {{/t.extraRow}}
{{/data-table}}
