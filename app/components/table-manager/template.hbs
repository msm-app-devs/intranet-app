{{#data-table data=data classNames=tableClassNames as |t|}}
  {{t.column propertyName='firstName' name='First name'}}
  {{t.column propertyName='lastName' name='Last Name'}}
  {{t.column propertyName='position' name='Position'}}
  {{t.column propertyName='team' name='Team'}}
  {{#t.column as |col|}}
    {{#if col.body}}
      <button class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off" onclick={{action 'toggleDetail' col.rowIndex}} >
        {{#if (eq col.rowIndex rowIndexToShowDetail)}}
          Hide Detail
        {{else}}
          Show Detail
        {{/if}}
      </button>
    {{/if}}
  {{/t.column}}
  {{#t.extraRow as |er|}}
    {{#if (eq er.rowIndex rowIndexToShowDetail)}}
      <td colspan="5">
        ID: {{er.row.id}}<br>
        First name: {{input value=(readonly er.row.firstName) key-up=(action 'onnickupdate')}}<br>
        Last name: {{input value=(readonly er.row.lastName) key-up=(action 'onnickupdate')}}<br>
        Position: {{input value=(readonly er.row.position) key-up=(action 'onnickupdate')}}<br>
        Team: {{input value=(readonly er.row.team) key-up=(action 'onnickupdate')}}<br>
        Birthday: {{input value=(readonly er.row.birthday) key-up=(action 'onnickupdate')}}<br>
        <button class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off" onclick={{action 'discardChanges'}} >
          Discard Changes
        </button>
        <button class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off" onclick={{action 'saveChanges' er}} >
          Save Changes
        </button>
      </td>
    {{/if}}
  {{/t.extraRow}}
{{/data-table}}
