<div class="layout-column" style="padding: 20px;">
  <div class="layout-row layout-align-center-center">
    <img src="https://image.flaticon.com/icons/svg/190/190568.svg" alt="User Profile" style="width:50%;max-width:256px">
  </div>
  <div class="layout-row layout-sm-colum layout-xs-column">
    {{paper-input class="flex" label="Title:" type="text" value=data.title onChange=(action (mut data.title))}}
    {{paper-input class="flex" label="Author:" type="text" value=data.author onChange=(action (mut data.author))}}
  </div>
  <div class="layout-row layout-sm-colum layout-xs-column">
    <div class="flex-50">
      <label class="intranet-pickaday-label">
        Date:
        {{pikaday-input readonly="readonly" value=data.date format="DD-MM-YYYY" class="form-control intranet-pickaday-input" name='date' onSelection=(action (mut data.date))}}
      </label>
    </div>
  </div>
  <div class="layout-row">
    {{!-- {{paper-input class="flex" textarea=true block=true label="News message:" maxlength=150 passThru=(hash rows=5 maxRows=5) value=data.message onChange=(action (mut data.message))}} --}}
  </div>
  <div class="layout-row">
    {{froala-editor data.message (action (mut data.message))}}
  </div>
  <div class="layout-row layout-align-end-center">
    {{#paper-button raised=true}}<div onClick={{action (route-action "createNews" data)}}>Add</div>{{/paper-button}}
  </div>
</div>
